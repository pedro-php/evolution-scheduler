{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid)/)"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^ioredis$": "<rootDir>/test/mocks/redis.mock.ts"
  }
}