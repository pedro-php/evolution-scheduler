generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

enum ScheduledMessageStatus {
  PENDING
  SENT
  FAILED
  CANCELLED
  PROCESSING
}

model Admin {
  id                String             @id @default(uuid())
  email             String             @unique
  password          String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  del               Boolean            @default(false)
  
  users             User[]
  instances         Instance[]
}

model User {
  id        String   @id @default(uuid())
  // email is removed
  name      String?  // New field
  phone     String   @unique // Now unique
  adminId   String
  del       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Restrict, onUpdate: Cascade)
}

model Instance {
  id                String             @id @default(uuid())
  name              String             @unique
  adminId           String
  apiKey            String
  url               String
  phone             String?
  connected         Boolean            @default(false)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  del               Boolean            @default(false)

  admin             Admin              @relation(fields: [adminId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  scheduledMessages ScheduledMessage[]

  @@index([name])
}

model Message {
  id          String        @id @default(uuid())
  instance    String
  to          String
  text        String
  externalId  String?       @unique
  remoteJid   String?
  status      MessageStatus @default(PENDING)
  errorCode   String?
  errorReason String?
  sentAt      DateTime?
  deliveredAt DateTime?
  readAt      DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([instance])
  @@index([to])
  @@index([status])
}

model ScheduledMessage {
  id           String                 @id @default(uuid())
  instanceId   String?
  to           String
  text         String
  scheduledFor DateTime
  sentAt       DateTime?
  status       ScheduledMessageStatus @default(PENDING)
  externalId   String?
  error        String?
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt

  instance     Instance?              @relation(fields: [instanceId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  @@index([scheduledFor])
  @@index([status])
}